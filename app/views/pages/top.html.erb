<body>
<div class = top-wrapper>
    <div class = "main">
        <%=image_tag 'main04.jpg' %>
    </div>
    <div class = "container">
      <div class = "topic-movie">
        <h1>現在話題の映画</h1>
      </div>
      <div class = "top-index-wrapper">
      <% @movies[0..11].each do | movie | %>
        <%= link_to movie_path(id: movie.id) do %>
          <div class = "movie-index-wrapper">
            <div class = "movie-index">
              <%= image_tag movie.image.url, size: '210x300' %>
              <h1 class = "movie-index-name">
              <%= movie.name %>
              </h1>
          　</div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class = "movie-index-link">
      <h1><%= link_to "映画一覧へ", movies_path %></h1>
    </div>
  </div>
</div>


</body>