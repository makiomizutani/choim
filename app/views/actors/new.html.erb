<div class = "users-new-wrapper">
  <div class = "container">
    <h1 class = "entry-name">Actor登録</h1>
    <div class = "new-member-entry-form">
      <div class = "row">
        <div class = 'col-md-offset-3 col-md-6' >
          <%= form_for @actor do |f|%>
            <div class = "form-group">
              <%= f.label :name, '俳優名', class: "new-label" %>
              <%= f.text_field :name, class: 'new-form'%>
            </div>
            <%= f.submit "登録", class: "btn-block"%>
          <% end %>
          <%= link_to 'Actor一覧へ', actors_path %>
        </div>
      </div>
    </div>
  </div>
</div> 
