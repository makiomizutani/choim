<div class = "users-new-wrapper">
  <div class = "container">
    <h1 class = "entry-name"><%= @movie.name %>の編集</h1>
    <div class = "new-member-entry-form">
      <div class = "row">
        <div class = 'col-md-offset-3 col-md-6' >
          <%= form_with model: @movie, local: true do |f|%>
          
            <div class = "form-group">
              <%= f.label :name, '映画名', class: "new-label" %>
              <%= f.text_field :name, class: 'new-form'%>
            </div>
            <div class = "form-group">
              <%= f.label :open_house, '公開日', class: "new-label" %>
              <%= f.date_select :open_house,{use_month_numbers:true,start_year:Time.now.year,end_year:1885,prompt:'選択してください'},{class: 'date-new-form'} %>
            </div>
            <div class = "form-group">
              <%= f.label :running_time, '上映時間', class: "new-label" %>
              <%= f.text_field :running_time, class: 'new-form' %>
            </div>
            <div class = "form-group">
              <%= f.label :director_id,'監督', class: 'new-label' %>
              <%= f.collection_select :director_id, Director.all, :id, :name, include_blank: '選択してください', class: 'new-form' %>
            </div>
            <div class = "form-group">
              <%= f.label :screen_writer,'脚本家', class: 'new-label' %>
              <%= f.text_field :screen_writer, class: 'new-form' %>
            </div>
            <div class = "form-group">
              <%= f.label :summary,'あらすじ', class: "new-label" %>
              <%= f.text_area :summary, class: 'new-area' %>
            </div>
            <div class = "form-group">
              <%= f.label :junle_id,'ジャンル', class: "new-label" %>
              <%= f.collection_select :junle_id, Junle.all, :id, :name, include_blank: "選択してください", class: 'new-form' %>
              
            </div>
            <div class = "form-group">
              <%= f.label :image,'画像', class: "new-label" %>
              <%= f.file_field :image, class: 'new-form' %>
            </div>
            <%= f.submit "編集", class: "btn-block"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>  
